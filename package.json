{
  "name": "hocs-management-ui",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build-dev": "webpack --mode=development --env.NODE_ENV=development",
    "build-prod": "webpack --mode=production --env.NODE_ENV=production",
    "test": "jest --coverage",
    "jest": "node_modules/jest/bin/jest.js  .",
    "lint:js": "eslint ./ --ignore-path .gitignore",
    "lint:jsx": "eslint --ignore-path .gitignore",
    "lint:ts": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:tsx": "tslint -c tslint.json 'src/**/*.tsx'"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@gitlab.digital.homeoffice.gov.uk:2222/hocs/hocs-management-ui.git"
  },
  "jest": {
    "setupFiles": [
      "./test/jestsetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "\\.spec.utils.(js|jsx)$"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "server/**/*.js"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/serialize-javascript": "^1.5.0",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "pre-commit": "^1.2.2",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.5.3",
    "webpack": "^4.38.0",
    "webpack-assets-manifest": "^3.1.1",
    "webpack-cli": "^3.3.6",
    "webpack-node-externals": "^1.7.2"
  },
  "pre-commit": [
    "lint-staged",
    "jest"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix --ignore-path .gitignore",
      "git add"
    ],
    "*.ts": [
      "tslint -c tslint.json 'src/**/*.ts' --fix",
      "git add"
    ],
    "*.jsx": [
      "eslint --fix --ignore-path .gitignore",
      "git add"
    ],
    "*.tsx": [
      "tslint -c tslint.json 'src/**/*.ts' --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "aws-sdk": "^2.335.0",
    "axios": "^0.19.0",
    "express": "^4.17.1",
    "govuk-frontend": "^3.0.0",
    "multer": "^1.3.0",
    "multer-s3": "^2.7.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-router-dom": "^4.3.1",
    "winston": "^2.4.2"
  }
}
